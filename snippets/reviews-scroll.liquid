<style>
.reviews-marquee-section {
  background: linear-gradient(to bottom, #FDF2F8, #FFFFFF);
  padding: 4rem 1rem;
  overflow: hidden;
}

.reviews-title {
  text-align: center;
  font-size: clamp(1.5rem, 4vw, 2.5rem);
  font-weight: bold;
  color: #E8A5B0;
  margin-bottom: 3rem;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.reviews-row {
  display: flex;
  margin-bottom: 1.5rem;
  white-space: nowrap;
}

.reviews-row-1 {
  animation: scrollLeft 30s linear infinite;
}

.reviews-row-2 {
  animation: scrollRight 30s linear infinite;
}

.reviews-row:hover {
  animation-play-state: paused;
}

.review-card {
  display: inline-flex;
  align-items: flex-start;
  gap: 1rem;
  background: white;
  border-radius: 50px;
  padding: 1rem 1.5rem;
  margin: 0 0.75rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  border: 1px solid #F3F4F6;
  min-width: max-content;
}

.review-avatar-wrapper {
  position: relative;
  flex-shrink: 0;
}

.review-avatar {
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 50%;
  object-fit: cover;
}

.review-badge {
  position: absolute;
  bottom: -0.25rem;
  right: -0.25rem;
  background: #EC4899;
  color: white;
  font-size: 0.75rem;
  font-weight: bold;
  border-radius: 50%;
  width: 2rem;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.review-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-width: 28rem;
}

.review-text {
  color: #374151;
  font-size: 0.875rem;
  margin-bottom: 0.25rem;
  line-height: 1.5;
}

.review-author {
  color: #111827;
  font-weight: 600;
  font-size: 0.875rem;
}

@keyframes scrollLeft {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

@keyframes scrollRight {
  0% { transform: translateX(-50%); }
  100% { transform: translateX(0); }
}

@media (max-width: 768px) {
  .reviews-marquee-section {
    padding: 3rem 0.5rem;
  }
  
  .review-card {
    padding: 0.875rem 1.25rem;
  }
  
  .review-avatar {
    width: 3rem;
    height: 3rem;
  }
}
</style>

